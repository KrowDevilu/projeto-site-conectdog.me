<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adote-me</title>
    <link rel="stylesheet" href="/assets/css/home.css">
    <link rel="stylesheet" href="/assets/css/general.css">
</head>


<body>
    <div class="box">
        <img src="http://localhost:8081/assets/img/logo.png" alt="logo" class="logo">
        <header>
            <ul>
                <li><a class="selected_nav">Home</a></li>
                <li><a href="/Doacoes/Cartao">Doações</a></li>
                <li><a href="/pesquisa">Pets</a></li>
                <li><a href="/sobrenos">Sobre Nós</a></li>
                <li><a href="/contato">Contato</a></li>
                <li><a href="/noticias">Notícias e Dicas</a></li>
                <div class="nav_buttons">
                    <a href="/loginUsuario"><button class="login ">Login</button></a>
                    <a href="/cadastroUsuario"><Button class="cadastro ">Cadastre-se</Button></a>
                    <a href="/perfil"><button class="perfil">Perfil</button></a>
                </div>
            </ul>
        </header>
        <div class="animaisSelecao">
            <ul class="slides">
                <% for(var i =0; i< pets.length && i < 3;i++) { %>
                    <input type="radio" name="radio-btn" id="img-<%= i+1 %>" checked />
                    <li class="slide-container">
                        <div class="slide">
                            <img src="http://localhost:8081/<%=pets[i].fileName%>" />
                        </div>
                        <!-- <div class="nav">
                            <label for="img-3" class="prev">&#x2039;</label>
                            <label for="img-2" class="next">&#x203a;</label>
                        </div> -->
                    </li>
                <% } %>
                <li class="nav-dots">
                    <% for(var i =0; i< pets.length && i < 3;i++) { %>
                        <label for="img-<%= i+1 %>" class="nav-dot" id="img-dot-<%= i+1 %>"></label>
                    <% } %>
                </li>
            </ul>
        </div>
        <div class="noticias">
            <h1>Noticias</h1>
            <div class="noticiasBox">
                <% for(var i = 0; i< 3 && i< noticias.length; i++) { %>
                <article class="noticia<%= i+1 %>">
                    <p><%= noticias[i].conteudo.substring(0,200)+ "..." %></p>
                </article>
                <% } %>
            </div>
        </div>
        <div class="dicas">
            <h1>Dicas</h1>
            <div class="dicasBox">
                <% for(var i = 0; i< 3 && i< dicas.length; i++) { %>
                    <article class="dica<%= i+1 %>">
                        <p><%= dicas[i].conteudo.substring(0,200)+"..." %></p>
                    </article>
                    <% } %>
            </div>
        </div>
        <div class="local">
            <article>
                <h2>Onde Nos Encontrar</h2>
                <iframe src=""></iframe>
            </article>
        </div>
        <div class="hamburger-menu">
            <input id="menu__toggle" type="checkbox" />
            <label class="menu__btn" for="menu__toggle">
              <span></span>
            </label>

            <ul class="menu__box">
                <li><a class="menu__item" href="/inicio">Home</a></li>
                <li><a class="menu__item" href="/Doacoes/Cartao">Doações</a></li>
                <li><a class="menu__item" href="/pesquisa">Pets</a></li>
                <li><a class="menu__item" href="/sobrenos">Sobre Nós</a></li>
                <li><a class="menu__item" href="/contato">Contato</a></li>
                <li><a class="menu__item" href="/noticias">Notícias e Dicas</a></li>
                <li>
                    <div class="mob-logo"><img src="http://localhost:8081/assets/img/logo.png" alt="logo"></div>
                </li>
            </ul>
            <div class="menu_shadow"></div>
        </div>

    </div>
    </div>
</body>

</html>