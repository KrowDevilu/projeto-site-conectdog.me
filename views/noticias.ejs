<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Noticias E Dicas</title>
    <link rel="stylesheet" href="/assets/css/noticias.css">
    <link rel="stylesheet" href="/assets/css/general.css">
</head>

<body>
    <div class="box">
        <img src="http://localhost:8081/assets/img/logo.png" alt="logo" class="logo">
        <header>
            <ul>
                <li><a href="/inicio">Home</a></li>
                <li><a href="/Doacoes/Cartao">Doações</a></li>
                <li><a href="/pesquisa">Pets</a></li>
                <li><a href="/sobrenos">Sobre Nós</a></li>
                <li><a href="/contato">Contato</a></li>
                <li><a class="selected_nav">Notícias e Dicas</a></li>
                <div class="nav_buttons">
                    <a href="../../Login/pag5.html"><button class="login ">Login</button></a>
                    <a href="../../Cadastro/cadastro.html"><Button class="cadastro ">Cadastre-se</Button></a>
                </div>
            </ul>
        </header>
        <section class="content">
            <div class="tabs">
                <a class="noticias-tab">
                NOTÍCIAS</a>
                <a class="dicas-tab" href="/dicas">
                DICAS</a>
            </div>
            <div class="tabs-select">
                <% for(var i = 0; i< noticias.length;i++) { %>
                    <a href="/informativos/Noticias/<%= noticias[i].pk_id %>" class="noticia">
                        <article>
                            <h2><%= noticias[i].titulo %></h2>
                            <div class="info">
                                <p><%= noticias[i].conteudo.substring(0,400) %></p>
                                <img src="http://localhost:8081/<%=noticias[i].imagem%>" alt="imagem" class="infoimg">
                            </div>
                            <% if(Session == true) { %>
                                <% if(user.admin == true){ %>
                                    <a href="/deleteInfo/Noticias/<%=noticias[i]._id%>"><button>Deletar Noticia</button></a>
                                <% } %>
                            <% } %>
                        </article>
                    </a>
                <% } %>
            </div>
        </section>
        <div class="hamburger-menu">
            <input id="menu__toggle" type="checkbox" />
            <label class="menu__btn" for="menu__toggle">
              <span></span>
            </label>

            <ul class="menu__box">
                <li><a class="menu__item" href="../../index.html">Home</a></li>
                <li><a class="menu__item" href="../../Doações/cartão/index.html">Doações</a></li>
                <li><a class="menu__item" href="../../Página 2/pag2.html">Pets</a></li>
                <li><a class="menu__item" href="../../Sobre nós/index.html">Sobre Nós</a></li>
                <li><a class="menu__item" href="../../Contato/contato.html">Contato</a></li>
                <li><a class="menu__item" href="">Notícias e Dicas</a></li>
                <li>
                    <div class="mob-logo"><img src="../../logo.png" alt=""></div>
                </li>
            </ul>
            <div class="menu_shadow"></div>
        </div>

    </div>
</body>

</html>